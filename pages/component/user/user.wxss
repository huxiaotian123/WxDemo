/* pages/component/user/user.wxss */

.topview {
  height: 140px;
  width: 100%;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  background-color: #e12323;
  padding-left: 20px;
  padding-bottom: 20px;
  align-items: center;
}

.image_avatar {
  height: 80px;
  width: 80px;
  border-radius: 50%;
}

.user_info {
  height: 100px;
  width: 150px;
  margin-left: 10px;
  flex-direction: column;
  justify-content: space-between;
  display: flex;
}

.top_item {
  width: 150px;
  height: 30px;
  display: flex;
  padding-left: 10px;
}

.top_item_image {
  height: 20px;
  width: 20px;
 
}

.top_item_font {
  margin-left: 10px;
  width: 120px;
  height: 20px;
  font-size: 14px;
  color: white;
}

.item_title_font {
  padding-left: 10px;
  width: 100%;
  height: 30px;
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #666; 
  background-color: #f0f1f1;
}


.user_itemlist_view{
  width: 100%;
  background-color: white;
}

.user_item_view{
  height: 39px;
  display: flex;
  flex-direction: row;
  align-items: center;
   color:#333;
  font-size: 14px;
  
}




